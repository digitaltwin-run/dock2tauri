{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Dock2Tauri",
  "version": "1.0.0",
  "identifier": "com.dock2tauri.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "cd ../app && python3 -m http.server 8080",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../app"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Dock2Tauri",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Docker App in Tauri",
    "longDescription": "Dock2Tauri Control Panel"
  },
  "plugins": {}
}