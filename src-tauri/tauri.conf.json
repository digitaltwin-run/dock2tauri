{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Dock2Tauri",
  "version": "1.0.0",
  "identifier": "com.dock2tauri.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "python3 -m http.server ${DEV_PORT:-8081} --directory ../app",
    "devUrl": "http://localhost:${DEV_PORT:-8081}",
    "frontendDist": "../app"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Dock2Tauri",
        "width": 1000,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Docker App in Tauri",
    "longDescription": "Dock2Tauri Control Panel"
  },
  "plugins": {}
}