{
  "name": "dock2tauri-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Dock2Tauri application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:docker": "playwright test docker-management.spec.ts",
    "test:ci": "playwright test --reporter=github",
    "install": "playwright install",
    "install:deps": "playwright install-deps",
    "show-report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:8081"
  },
  "keywords": [
    "tauri",
    "docker",
    "e2e",
    "playwright",
    "testing"
  ],
  "author": "Dock2Tauri Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
