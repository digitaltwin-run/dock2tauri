# Dock2Tauri Configuration
# Copy this file to .env and modify values as needed

# Development Configuration
DEV_PORT=8081
DEV_HOST=localhost
DEV_TIMEOUT=30

# Build Configuration
BUILD_TIMEOUT=600
BUILD_TARGET=all
BUILD_CLEAN_BEFORE=true

# Docker Configuration
DOCKER_TIMEOUT=30
DOCKER_PULL_TIMEOUT=300
DEFAULT_DOCKER_REGISTRY=docker.io

# Container Presets
NGINX_PORT=8088
NGINX_INTERNAL_PORT=80
GRAFANA_PORT=3001
GRAFANA_INTERNAL_PORT=3000
JUPYTER_PORT=8888
JUPYTER_INTERNAL_PORT=8888
PORTAINER_PORT=9001
PORTAINER_INTERNAL_PORT=9000

# Application Configuration
APP_NAME=Dock2Tauri
APP_VERSION=1.0.0
APP_WINDOW_WIDTH=1000
APP_WINDOW_HEIGHT=800
APP_MIN_WIDTH=800
APP_MIN_HEIGHT=600

# Output and Naming Customization
OUTPUT_DIR=./dist
CUSTOM_APP_NAME=""
CUSTOM_FILENAME=""
ADDITIONAL_OUTPUT_DIRS=""

# Package Management
RPM_CLEANUP_AUTO=true
RPM_FORCE_INSTALL=true
PACKAGE_CONFLICT_RESOLUTION=auto

# Testing Configuration
TEST_TIMEOUT=300
TEST_PARALLEL=true
TEST_BROWSER=chromium
TEST_HEADLESS=false

# Debug Configuration
DEBUG_LEVEL=info
VERBOSE_OUTPUT=false
LOG_FILE=dock2tauri.log

# System Paths (will be auto-detected if not set)
# RUST_TOOLCHAIN_PATH=
# NODE_PATH=
# PYTHON_PATH=
# DOCKER_PATH=

# Build Options
TAURI_BUNDLE_TARGETS=appimage,deb,rpm
TAURI_UPDATER=false
TAURI_DEV_FEATURES=devtools

# Network Configuration
PROXY_ENABLED=false
# HTTP_PROXY=
# HTTPS_PROXY=

# Security Configuration
CSP_ENABLED=false
ALLOW_EXTERNAL_URLS=true

# Performance Configuration
PARALLEL_BUILDS=true
BUILD_CACHE=true
INCREMENTAL_BUILD=true
